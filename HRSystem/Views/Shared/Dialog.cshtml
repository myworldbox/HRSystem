@model HRSystem.ViewModels.DialogViewModel

@if (Model != null && !string.IsNullOrWhiteSpace(Model.message))
{
    <div class="alert alert-@Model.dialog.ToString()" id="dialog-alert">
        @Model.message
    </div>

}

<script>
    setTimeout(function () {
        var alertBox = document.getElementById('dialog-alert');
        if (alertBox) {
            alertBox.style.display = 'none';
        }
    }, 5000);
</script>